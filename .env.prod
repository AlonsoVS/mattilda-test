# Docker Production Environment
# Use this for production deployment with docker-compose

# Database Configuration (CHANGE THESE VALUES!)
DATABASE_URL=postgresql://mattilda_prod_user:CHANGE_THIS_SECURE_PASSWORD@db:5432/mattilda_prod_db
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=mattilda_prod_db
DATABASE_USER=mattilda_prod_user
DATABASE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=warning

# Database Settings
DB_ECHO=false

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Mattilda API
PROJECT_DESCRIPTION=School Management System API
VERSION=1.0.0

# Security (REQUIRED: CHANGE THESE VALUES!)
SECRET_KEY=CHANGE_THIS_TO_VERY_LONG_RANDOM_STRING_FOR_PRODUCTION_MINIMUM_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=15

# CORS Settings (CHANGE TO YOUR ACTUAL DOMAINS!)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Application Server
APP_HOST=0.0.0.0
APP_PORT=8000
RELOAD=false

# Workers (adjust based on your server capacity)
WORKERS=4
